<%# Required locals: "f" (a form_for),  %>
<%# "title" (the field title), "field" (the field name), %>
<%# "field_sw" (the Swahili field name %>
<tr>
  <th><%= f.label field, title %></th>
  <td>
    <div class="spacer">
      <%= f.text_field field %>
    </div>
  </td>
  <td>
    <div class="spacer">
      <%= f.text_field field_sw %>
    </div>
  </td>
</tr>
